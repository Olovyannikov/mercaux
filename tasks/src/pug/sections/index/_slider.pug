section.slider#task-4
    .container.slider__container
        h2.title.slider__title Task 4 - slider (using native js lib - swiper.js)
        .slider__controls
            button(type="button" aria-label="Переключить слайд назад").swiper-button-prev.slider__prev
                +svg("chev",20, 20)
            button(type="button" aria-label="Переключить слайд далее").swiper-button-next.slider__next
                +svg("chev",20, 20)
        .slider__content.swiper
            .swiper-wrapper.slider__swiper
                each article in articles
                    article.slider__article.swiper-slide.slider__next
                        picture
                            source(srcset="./img/" + article.id + "@2x.webp 2x, ./img/" + article.id + ".webp 1x" type="image/webp")
                            img(srcset="./img/" + article.id + "@2x.png 2x" src="./img/" + article.id + ".png" alt="Article image about feature" aria-hidden="true")
                        p.slider__text #{article.text}
